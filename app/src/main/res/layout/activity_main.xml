<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context=".MainActivity">

        <!-- Local team score -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/local"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="38">

            <!-- Local label -->
            <TextView
                android:id="@+id/local_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/local"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/local_score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Remove 1 point -->
            <Button
                android:id="@+id/local_remove_point"
                android:layout_width="96sp"
                android:layout_height="56sp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/grey"
                android:text="@string/remove_point"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/local_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Local score -->
            <TextView
                android:id="@+id/local_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/score"
                android:textColor="@color/black"
                android:textSize="64sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/local_label" />

            <!-- Add points -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/local_score"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Add 1 point -->
                <Button
                    android:id="@+id/local_add_point"
                    android:layout_width="96sp"
                    android:layout_height="56sp"
                    android:backgroundTint="@color/grey"
                    android:text="@string/add_point"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/local_add_two_point"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/local_score"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Add 2 points -->
                <Button
                    android:id="@+id/local_add_two_point"
                    android:layout_width="96sp"
                    android:layout_height="56sp"
                    android:backgroundTint="@color/grey"
                    android:text="@string/add_two_points"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/local_score"
                    app:layout_constraintTop_toBottomOf="@+id/local_add_point" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Game controlls -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/match_controls"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="24">

            <!-- Restart leaderboard -->
            <ImageButton
                android:id="@+id/restore_leaderboard"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/restart_leaderboard"
                android:src="@drawable/ic_restore_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_basketball"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Basketball picture -->
            <ImageView
                android:id="@+id/img_basketball"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/basketball_img"
                android:src="@drawable/basketball"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Show match results -->
            <ImageButton
                android:id="@+id/match_results"
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/match_results"
                android:src="@drawable/ic_arrow_right_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_basketball"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Visitor team score -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/visitor"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="38">

            <!-- Visitor label -->
            <TextView
                android:id="@+id/vistor_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:text="@string/visitor"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/visitor_score" />

            <!-- Remove point -->
            <Button
                android:id="@+id/visitor_remove_point"
                android:layout_width="96sp"
                android:layout_height="56sp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/grey"
                android:text="@string/remove_point"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/visitor_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Visitor score -->
            <TextView
                android:id="@+id/visitor_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/score"
                android:textColor="@color/black"
                android:textSize="64sp"
                app:layout_constraintBottom_toTopOf="@id/vistor_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Add points -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/visitor_score"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Add 1 point -->
                <Button
                    android:id="@+id/visitor_add_point"
                    android:layout_width="96sp"
                    android:layout_height="56sp"
                    android:backgroundTint="@color/grey"
                    android:text="@string/add_point"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/local_add_two_point"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/local_score"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Add 2 points -->
                <Button
                    android:id="@+id/visitor_add_two_point"
                    android:layout_width="96sp"
                    android:layout_height="56sp"
                    android:backgroundTint="@color/grey"
                    android:text="@string/add_two_points"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/local_score"
                    app:layout_constraintTop_toBottomOf="@+id/local_add_point" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>